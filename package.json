{
  "name": "storage-message",
  "version": "0.0.0",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": ["dist", "lib"],
  "scripts": {
    "start": "cross-env NODE_ENV=development",
    "precompile": "rimraf ./lib ./types",
    "compile": "tsc",
    "predist": "rimraf ./dist",
    "dist": "cross-env NODE_ENV=production rollup -c",
    "prepublishOnly": "cross-env NODE_ENV=production yarn compile && yarn dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "*",
    "cross-env": "^5.2.0",
    "husky": "^1.0.0-rc.14",
    "karma": "^3.0.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.1",
    "rollup-plugin-typescript": "^1.0.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^2.9"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.css": ["prettier --parser css --write", "git add"],
      "*.less": ["prettier --parser less --write", "git add"],
      "*.json": ["prettier --parser json --write", "git add"],
      "*.{js,jsx}": [
        "prettier --print-width 100 --tab-width 2 semi true --single-quote true --trailing-comma es5 --no-bracket-spacing false --arrow-parens always --parser babylon --write",
        "git add"
      ],
      "*.ts": [
        "tslint --fix",
        "prettier --print-width 100 --tab-width 2 semi true --single-quote true --trailing-comma es5 --arrow-parens avoid --write",
        "git add"
      ]
    },
    "ignore": []
  }
}
